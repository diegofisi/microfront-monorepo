{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "paths": {
      "catalog/Module": ["apps/catalog/src/remote-entry.ts"],
      "profile/Module": ["apps/profile/src/remote-entry.ts"],
      "@banco/shared": ["libs/shared/src/index.ts"],
    },
    "baseUrl": "."
  }
}